generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  guildId String @id
  guildName String
  notifyChannelId String?
  joinings Joining[]

  @@map("guilds")
}

model User {
  userId String @id
  userName String
  lastTaskId Int? @unique
  lastTask Task? @relation("LastTask", fields: [lastTaskId], references: [taskId], onDelete: SetNull, onUpdate: Cascade)
  tasks Task[] @relation("UserTasks")
  joinings Joining[]

  @@map("users")
}

model Joining {
  guildId String
  userId String
  guild Guild @relation(fields: [guildId], references: [guildId], onUpdate: Cascade, onDelete: Cascade)
  user User @relation(fields: [userId], references: [userId], onUpdate: Cascade, onDelete: Cascade)

  @@id([guildId, userId])
  @@map("joinings")
}

model Task {
  taskId Int @id @default(autoincrement())
  taskName String
  userId String
  isReported Boolean @default(false)
  duration Int @default(0) // ミリ秒単位
  user User @relation("UserTasks", fields: [userId], references: [userId], onUpdate: Cascade, onDelete: Cascade)
  lastTaskUser User? @relation("LastTask")

  @@map("tasks")
}
